    <select id="selectBoardCount" resultType="int">
        SELECT COUNT(*) FROM board WHERE is_del=0
    </select>

    <select id="selectBoardListWithLimitAndOffset" resultType="com.moon.whiteboard.dto.BoardDto">
        SELECT
            *
        FROM
            board
        WHERE
            is_del=0
        ORDER BY
            uid DESC
            LIMIT #{limit} OFFSET #{offset}
    </select>

    <select id="selectBoardList" resultType="com.moon.whiteboard.dto.BoardDto">
        SELECT
            *
        FROM
            board
        WHERE
            is_del=0
-- 삭제 되지 않은 게시글만
        ORDER BY
            uid DESC
    </select>

    <select id="selectBoard" resultType="com.moon.whiteboard.dto.BoardDto">
        SELECT
            uid,
            title,
            content,
            created_user,
            created_at
        FROM
            board
        WHERE
            uid = #{uid}
    </select>

    <insert id="insertFile" parameterType="com.moon.whiteboard.dto.FileDto">
        INSERT INTO
        file(
        uid,
        file_name,
        file_size,
        file_url
        )
        VALUES
        <foreach collection="list" item="file" separator=",">
            (
            #{file.uid},
            #{file.fileName},
            #{file.fileSize},
            #{file.fileUrl}
            )
        </foreach>
    </insert>

    <insert id="insertBoard" parameterType="com.moon.whiteboard.dto.BoardDto">
        INSERT INTO
            board(
            type,
            title,
            content,
            created_at
        )
        VALUES(
                  #{type},
                  #{title},
                  #{content},
                  now()
              )
    </insert>

</mapper>