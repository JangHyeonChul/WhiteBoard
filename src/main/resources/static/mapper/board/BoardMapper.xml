    <resultMap id="boardResultMap" type="com.example.dto.BoardDto">
        <id property="uid" column="uid"/>
        <result property="type" column="type"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="createdUser" column="created_user"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        <result property="isDel" column="is_del"/>
        <result property="viewCnt" column="view_cnt"/>
    </resultMap>

    <select id="selectBoardByUid" resultMap="boardResultMap">
        SELECT * FROM board WHERE uid = #{uid}
    </select>


    </insert>

    <insert id="insertBoard" parameterType="com.moon.whiteboard.dto.BoardDto">
        INSERT INTO
            board(
                type,
                title,
                content,
                created_at
        )
        VALUES(
                  #{type},
                  #{title},
                  #{content},
                  now()
              )
    </insert>
</mapper>